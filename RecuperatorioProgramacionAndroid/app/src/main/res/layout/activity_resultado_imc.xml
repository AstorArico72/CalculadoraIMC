<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultadoIMC">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        android:text="Resultado de IMC"
        android:id="@+id/TEncabezado"
        android:textSize="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/TEstatura"
        android:layout_marginRight="40dp"
        app:layout_constraintTop_toBottomOf="@id/TEncabezado"
        android:layout_marginTop="20dp"
        android:text="Sexo: Nulo"
        android:id="@+id/TSexo"
        android:textSize="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TEncabezado"
        android:layout_marginTop="20dp"
        android:text="Estatura: 000 cm"
        android:id="@+id/TEstatura"
        android:textSize="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/TEstatura"
        android:layout_marginLeft="40dp"
        app:layout_constraintTop_toBottomOf="@id/TEncabezado"
        android:layout_marginTop="20dp"
        android:text="Peso: 000.0 kg"
        android:id="@+id/TPeso"
        android:textSize="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TEncabezado"
        android:textSize="100dp"
        android:layout_marginTop="80dp"
        android:text="0.0"
        android:id="@+id/TResultadoImc"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TResultadoImc"
        android:layout_marginTop="60dp"
        android:text="Nulo"
        android:id="@+id/TEstado"
        android:textSize="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TEstado"
        android:layout_marginTop="60dp"
        android:text="Inferior a 20: Peso bajo"
        android:id="@+id/TLeyenda1"
        android:textSize="15dp"
        android:textColor="#0000FF"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TLeyenda1"
        android:layout_marginTop="10dp"
        android:text="20 a 25: Peso saludable"
        android:id="@+id/TLeyenda2"
        android:textSize="15dp"
        android:textColor="#00FF00"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TLeyenda2"
        android:layout_marginTop="10dp"
        android:text="Superior a 25: Sobrepeso"
        android:id="@+id/TLeyenda3"
        android:textSize="15dp"
        android:textColor="#FF0000"
        />

    <TextView
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TLeyenda3"
        android:layout_marginTop="10dp"
        android:text="En realidad, los rangos son otros, pero el profesor lo pidió así.\nSólo busca más información sobre los IMC."
        android:id="@+id/Nota1"
        android:textSize="12dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>